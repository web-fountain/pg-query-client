{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*":            ["./src/*"],
      "@Components/*":  ["./src/components/*"],
      "@Components":    ["./src/components"],
      "@Lib/*":         ["./src/lib/*"],
      "@Lib":           ["./src/lib"],
      "@Pages/*":       ["./src/pages/*"],
      "@Pages":         ["./src/pages"],
      "@Styles/*":      ["./src/assets/styles/*"],
      "@Styles":        ["./src/assets/styles"],
      "@Utils/*":       ["./src/utils/*"],
      "@Utils":         ["./src/utils"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
   ]
}
